<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Telemetry.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Telemetry.App.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Overview"
             Icon="../Images/home.svg">
            <ShellContent Title="Overview" ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
        </Tab>
        <Tab Title="Graphs"
             Icon="../Images/graph.svg">
            <ShellContent Title="Telemetry graphs" ContentTemplate="{DataTemplate local:GraphPage}" Route="GraphPage" />
        </Tab>
    </TabBar>

</Shell>
